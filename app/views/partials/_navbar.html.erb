      <i class="fa fa-bars dropdown-toggle" id="nav-fa" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "Cocktail", cocktails_path %></li>
        <li><%= link_to "Add Cocktail", new_cocktail_path %></li>
