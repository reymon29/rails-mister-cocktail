<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to cocktails_path do %>
    <%= image_tag "logo.png", class: "navbar-wagon-brand" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <%= link_to "Cocktail", cocktails_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Add Cocktail", new_cocktail_path, class: "navbar-wagon-item navbar-wagon-link" %>
